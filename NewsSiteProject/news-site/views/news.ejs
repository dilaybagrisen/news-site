  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">Haber Sitesi</a>

        <% if (user) { %>
        <span class="navbar-text text-white">
          Merhaba, <%= user.username %> (<%= user.role %>)
        </span>

        <% if (user && user.role === "admin") { %>
        <a href="/users" class="btn btn-info mb-3">ðŸ‘¤ KullanÄ±cÄ± YÃ¶netimi</a>
        <% } %>

        <a href="/auth/logout" class="btn btn-danger btn-sm ms-2">Ã‡Ä±kÄ±ÅŸ Yap</a>
        <% } else { %>
        <a href="/auth/login" class="btn btn-primary btn-sm">GiriÅŸ Yap</a>
        <% } %>
      </div>
    </nav>

    <div class="container mt-4">
      <h1 class="mb-4">Haberler</h1>

      <% if (user && (user.role === "admin" || user.role === "writer")) { %>
      <a href="/news/add" class="btn btn-success mb-3">+ Yeni Haber Ekle</a>
